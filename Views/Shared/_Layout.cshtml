@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor httpAcc


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartMotor</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha512-iQQV+nXtBlmS3XiDrtmL+9/Z+ibux+YuowJjI4rcpO7NYgTzfTOiFNm09kWtfZzEB9fQ6TwOVc8lFVWooFuD/w==" crossorigin="anonymous"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute">
    </environment>


    @*<link href="~/css/fci-Style.css" rel="stylesheet" />*@
    <link href="~/css/fcisite.css" rel="stylesheet" />
    <link href="~/css/fciStyle.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2021.2.616/styles/kendo.common-bootstrap.min.css" integrity="sha384-vgOR7lnwDaV+ECBOsxtp2LBmf8FXiEn0hCjYWFiT+CQk7CfFomkw0xMC5vZ1OslU" crossorigin="anonymous">

    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2021.2.616/styles/kendo.bootstrap.min.css" integrity="sha384-1W9Xefk+B3E/ofuoLNRteVC26oyiFXIFKsPm/hPXQo/IDCwuw2usMZnQCZDd7+/r" crossorigin="anonymous">

    <link href="~/lib/fontawesome/css/fontawesome.min.css" rel="stylesheet" />

    <script src="https://kendo.cdn.telerik.com/2021.2.616/js/jquery.min.js" integrity="sha384-5ypc8U4hUwE4mZsu3JMIdSJDqo0FATaz9NlQFIG6qcMZUrZOh4v+Y8PF4Fcszo2x" crossorigin="anonymous"></script>

    <script src="https://kendo.cdn.telerik.com/2021.2.616/js/jszip.min.js" integrity="sha384-/uIBVG1oH4Tb9OcLLxfroAlKUcnoOIEjpv8jPC8YM4QzWRTuc9/VSQdrs+iFkWN1" crossorigin="anonymous"></script>

    <script src="https://kendo.cdn.telerik.com/2021.2.616/js/kendo.all.min.js" integrity="sha384-bmVguhMYtJWTmC0EelgQm22PXdwNLP5DigGwPXSRGQOQJEV3Xi37dTnG7dsal65b" crossorigin="anonymous"></script>

    <script src="https://kendo.cdn.telerik.com/2021.2.616/js/kendo.aspnetmvc.min.js" integrity="sha384-C9PnYk2vbJWeN7+1fxRHpb+w9SD2o5LgV0/wwlcizzPc4GMbGs2Px8ZDAS+bf3ov" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="http://www.falconinsurance.co.th/">
                    <picture>
                        <source media="(max-width: 720px)" srcset="~/Image/logo2.png" class="img-fluid">
                        <source media="(min-width: 800px)" srcset="~/Image/logo2.png" class="img-fluid">
                        <img src="~/Image/logo2.png" class="img-fluid">
                    </picture>

                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ml-auto">

                        @if (httpAcc.HttpContext.Session.GetString("_RoleName") == "1" &&
httpAcc.HttpContext.Session.GetString("_RoleName").ToString().Length > 0)
                        {

                            <li class="nav-item active">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Main" asp-action="page">GPS Stock</a>
                            </li>

                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Inquiry
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Policy" asp-action="Inq">Policy</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Policy" asp-action="transaction">Transaction</a>
                                    </li>


                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Policy" asp-action="Change">Change Payment</a>
                                    </li>

                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Notification" asp-action="alert">Notification</a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Payment Inquiry
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="Paid">สรุปยอดรายเดือน</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="UnPaid">รายงาน UnPaid</a>
                                    </li>
                                </ul>
                            </li>


                        }

                        @if (httpAcc.HttpContext.Session.GetString("_RoleName") == "2" &&
httpAcc.HttpContext.Session.GetString("_RoleName").ToString().Length > 0)
                        {

                            <li class="nav-item active">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Main" asp-action="page">GPS Stock</a>
                            </li>

                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Inquiry
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Policy" asp-action="Inq">Policy</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Policy" asp-action="transaction">Transaction</a>
                                    </li>

                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Notification" asp-action="alert">Notification</a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Payment Inquiry
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="Paid">สรุปยอดรายเดือน</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Payment" asp-action="UnPaid">รายงาน UnPaid</a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @if (httpAcc.HttpContext.Session.GetString("_RoleName") == "3" &&
httpAcc.HttpContext.Session.GetString("_RoleName").ToString().Length > 0)
                        {
                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Inquiry
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Policy" asp-action="Inq">Policy</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Policy" asp-action="transaction">Transaction</a>
                                    </li>

                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Policy" asp-action="Change">Change Payment</a>
                                    </li>

                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Notification" asp-action="alert">Notification</a>
                                    </li>

                                    
                                </ul>
                            </li>
                        }

                        @if (httpAcc.HttpContext.Session.GetString("JWToken") != null &&
httpAcc.HttpContext.Session.GetString("JWToken").ToString().Length > 0)
                        {
                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    จัดการบัญชี
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Manage" asp-action="mgr">ผู้ใช้งาน</a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Login"
                               asp-action="Logout">Logout</a>
                        </li>

                    </ul>
                </div>
            </div>

        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2021-The Falcon Insurance Public Co., Ltd.
        </div>
    </footer>


    <environment names="Development">
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha512-n6dYFOG599s4/mGlA6E+YLgtg9uPTOMDUb0IprSMDYVLr0ctiRryPEQ8gpM4DCMlx7M2G3CK+ZcaoOoJolzdCg==" crossorigin="anonymous"
                asp-fallback-src="~/lib/bootstrap/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>
    </environment>
</body>
</html>